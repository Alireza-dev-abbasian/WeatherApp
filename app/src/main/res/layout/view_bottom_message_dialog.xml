<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rounded_rectangle_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="عنوان"
                android:textColor="#595959"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="#d8d8d8"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_rounded_rectangle_white"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="عنوان"
                android:textColor="#848484"
                android:textSize="14sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_dialog_positive"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/round_btn_gray"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:minWidth="100dp"
                android:paddingHorizontal="10dp"
                android:text="تلاش دوباره"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_dialog_negative"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_round_border_rectangle_gray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:minWidth="100dp"
                android:paddingHorizontal="10dp"
                android:text="انصراف"
                android:textColor="#969696"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>